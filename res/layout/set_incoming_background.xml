<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TextView android:text="Set Background Incoming" android:id="@+id/textView1"
			android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="wrap_content"></TextView>

		<Button android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:id="@+id/buttonImageIncoming"
			android:text="Image"></Button>
	</LinearLayout>
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_marginLeft="5dip"
		android:layout_marginRight="5dip" android:layout_height="wrap_content">

		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="RED" />
		<SeekBar android:id="@+id/seekredIncoming"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:max="255" />
		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="GREEN" />
		<SeekBar android:id="@+id/seekgreenIncoming"
			android:layout_width="fill_parent"
			android:indeterminateDrawable="@android:drawable/progress_indeterminate_horizontal"
			android:indeterminateBehavior="cycle" android:layout_height="wrap_content"
			android:max="255" />
		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="BLUE" />
		<SeekBar android:id="@+id/seekblueIncoming"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:max="255" />
		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="ALPHA" />
		<SeekBar android:id="@+id/seekalphaIncoming"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:max="255" />
	</LinearLayout>
</LinearLayout>