<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<TextView android:text="Set Font Incoming" android:id="@+id/textView1"
		android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_width="wrap_content" />
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TextView android:text="Font" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_gravity="center"/>
		<Spinner android:id="@+id/incoming_font" android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
	</LinearLayout>
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TextView android:text="Style" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_gravity="center" />
		<Spinner android:id="@+id/incoming_style"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
	</LinearLayout>
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TextView android:text="Size   " android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_gravity="center" />
		<SeekBar android:id="@+id/seekSize" android:layout_width="fill_parent"
			android:indeterminateDrawable="@android:drawable/progress_indeterminate_horizontal"
			android:indeterminateBehavior="cycle" android:layout_height="wrap_content"
			android:max="40" android:layout_marginRight="5dip"/>
	</LinearLayout>

</LinearLayout>
