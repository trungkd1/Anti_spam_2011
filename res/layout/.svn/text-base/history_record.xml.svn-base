<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="?android:attr/listPreferredItemHeight"
	android:layout_width="fill_parent" android:orientation="horizontal">

	<!-- <ImageView android:id="@+id/presence" android:layout_width="wrap_content" 
		android:layout_height="wrap_content" android:layout_marginRight="5dip" android:paddingBottom="20dip" 
		/> -->
	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:orientation="vertical">
		<LinearLayout android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:orientation="horizontal">

			<TextView android:id="@+id/address" android:layout_width="0dip"
				android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium"
				android:singleLine="true" android:layout_marginTop="6dip" android:text="1" 
				android:layout_marginRight="5dip" android:layout_marginLeft="4dip"
				android:ellipsize="marquee" android:layout_weight="1" />

			<TextView android:id="@+id/created" android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall" android:text="1" 
				android:layout_width="wrap_content" />
		</LinearLayout>

		<TextView android:id="@+id/body" android:layout_height="wrap_content"
			android:text="1" android:layout_width="fill_parent" android:gravity="center_vertical"
			android:layout_marginRight="5dip" android:layout_marginLeft="4dip"
			android:textAppearance="?android:attr/textAppearanceSmall" />
	</LinearLayout>

</LinearLayout>
