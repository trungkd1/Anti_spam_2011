<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:myapp="http://schemas.android.com/apk/res/org.baole.app.antismsspam"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<LinearLayout android:id="@+id/ad_container"
		android:layout_height="wrap_content"
		android:gravity="top" android:layout_width="fill_parent">
	</LinearLayout>

	<TextView android:text="@string/current_password" android:id="@+id/TextView01"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:gravity="center_horizontal" />
	<EditText android:id="@+id/edit_current_password"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:hint="@string/current_password" android:inputType="textPassword"></EditText>
		
	<TextView android:text="@string/new_password" android:id="@+id/TextView02"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:gravity="center_horizontal" />
	<EditText android:id="@+id/edit_new_password"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:hint="@string/new_password" android:inputType="textPassword"></EditText>

	<TextView android:text="@string/confirm_password" android:id="@+id/TextView03"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:gravity="center_horizontal" />
	<EditText android:id="@+id/edit_confirm_password"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:hint="@string/confirm_password" android:inputType="textPassword"></EditText>

	<LinearLayout android:id="@+id/LinearLayout01"
		android:layout_gravity="center_horizontal" android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">

		<Button android:text="@string/cancel" android:id="@+id/btn_cancel"
			android:layout_height="wrap_content" android:layout_weight="0.5"
			android:layout_width="fill_parent" />
		<Button android:id="@+id/btn_ok"
			android:layout_height="wrap_content" android:layout_width="fill_parent"
			android:layout_weight="0.5" android:text="@android:string/ok"/>

	</LinearLayout>

</LinearLayout>

