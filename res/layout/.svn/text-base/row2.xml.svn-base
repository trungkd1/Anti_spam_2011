<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:background="#ffffff"
	android:orientation="vertical" android:id="@+id/layout" android:layout_gravity="right">
	
	
	<LinearLayout  android:layout_width="wrap_content" 
		 android:layout_height="wrap_content"
		android:orientation="vertical">

		<LinearLayout 
			android:layout_marginRight="10px" 
			android:layout_height="wrap_content" android:paddingRight="20px"
			 android:layout_width="wrap_content">

			<ImageView android:id="@+id/icon" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_alignParentLeft="true"
				android:src="@drawable/icon" />

			<TextView android:id="@+id/textContentSMS"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_toRightOf="@id/icon" android:text="Some text"
				android:textColor="#000000" />		
		</LinearLayout>


		<TextView android:id="@+id/textCreated" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_gravity="right"
			android:layout_below="@+id/this_is_above" android:paddingRight="20px"
			android:textColor="#000000" android:layout_marginRight="10px"
			android:textSize="10dip" />
	</LinearLayout>
	
	
		
</LinearLayout>